<h1>Available Books</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td>
        <%= form_tag(article_path(article), method: "get") do %>
        <%= label_tag(:page, "Current Page:") %>
        <%= number_field_tag(:page) %>
        <%= submit_tag("Show") %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>