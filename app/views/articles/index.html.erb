<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <header id="#top">
    <div class="row">
      <div class="large-4 column lpad">
        <div class="logo">
          <span>1q84a:</span>
          <span>1 question 84 answers</span>
        </div>
      </div>
      <div class="large-8 column ar lpad">
        <nav class="menu">
          <%= link_to 'Home', articles_path %>
        </nav>     
      </div>
    </div>
  </header>

<div class="row mt">
    <div class="large-12">
      <div class="large-12 forum-category rounded top">
        <div class="large-8 small-10 column lpad">
          <span>
            <table>
              <tr>
                <th><div id="title">Title</div></th>
                <th><div id="title">Author</div></th>
                <th><div id="title">Current Page</div></th>
                <th colspan="2"></th>
              </tr>
 
              <% @articles.each do |article| %>
                <tr>
                  <td><div id="bookTitle"><%= article.title %></div></td>
                  <td><div id="bookTitle"><%= article.author %></div></td>
                  <td>
                    <%= form_tag(article_path(article), method: "get") do %>
                    <%= label_tag(:page, "") %>
                    <%= number_field_tag(:page) %>
                    <%= submit_tag("Show") %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </span>
        </div>
      </div>
    </div>
  </div>
